#!/bin/bash

set -e
set -o pipefail
set -u

. /minioslib || exit 1

SCRIPT_DIR="$(dirname "$(readlink -f "$0")")"

console_colors

information "Running SuperMiniOS Gaming postinstall..."

# Copy rootcopy-postinstall files
if [ -d "${SCRIPT_DIR}/rootcopy-postinstall" ]; then
    cp -af "${SCRIPT_DIR}/rootcopy-postinstall/"* / 2>/dev/null || true
    information "Copied postinstall files"
fi

# Set correct permissions for neofetch config
if [ -d /etc/skel/.config/neofetch ]; then
    chmod 644 /etc/skel/.config/neofetch/*
fi

# Set correct permissions for sysctl config
if [ -f /etc/sysctl.d/99-superminios-gaming.conf ]; then
    chmod 644 /etc/sysctl.d/99-superminios-gaming.conf
    information "Gaming kernel parameters configured"
fi

# Create SuperMiniOS release file
cat > /etc/superminios-release << 'EOF'
DISTRIB_ID=SuperMiniOS
DISTRIB_RELEASE=1.0
DISTRIB_CODENAME=gaming
DISTRIB_DESCRIPTION="SuperMiniOS Gaming Edition"
DISTRIB_FEATURES="Steam, Lutris, Wine, GameMode, Vulkan"
EOF

# Update /etc/issue for login screen
cat > /etc/issue << 'EOF'

  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—
